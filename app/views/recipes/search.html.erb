<div class="container">
  <div class="row mt-5">
    <div class="col-lg-6">
      <h4>Your search returned the following recipes:</h4>
      <% @recipes.first(5).each do |recipe| %>
        <div class="card-product">
          <img src="<%= recipe['image']%>" alt="#">
          <h2><%= recipe['title'].capitalize %></h2>
        </div>
      <% end %>
    </div>
  </div>
</div>
