        <%= flash[:alert] %>
      </div>
    <% end %>
    <div class="mx-auto mt-5" style="width: 400px">
      <%= form_with(url: index_path, method: 'get', local: true) do %>
        <div class="form-group">
          <%= label_tag :ingredients, 'Search for a recipe based on your ingredients: ', class: 'mb-2' %>
          <%= text_field_tag :ingredients, nil, placeholder: 'Eg. Onion, Carrot, Chorizo', class: 'form-control mb-2' %>
        </div>
        <%= button_tag 'Search', class: 'btn btn-success btn-block' %>
      <% end %>
